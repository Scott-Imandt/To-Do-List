<%- include("header") -%>




<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">To Do List</a>
    <div class=" navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="menu" data-bs-toggle="dropdown" aria-expanded="false">
            Edit
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li>
              <form class="dropdown-item" action="/create" method="post">
              <input id="asd" type="text" name="newList" placeholder="New List " autocomplete="off">
              <button type="submit">+</button>
            </form>
          </li>
          <div class="dropdown-divider"></div>
            <li>
              <form class="dropdown-item" action="/deleteList" method="post">
                <label type="label">Delete:</label>
                <input id = "deleteInput" type="submit" name="listdeletebtn" value=<%=listTitle%>></input>
              </form>
            </li>
            <div class="dropdown-divider"></div>
            <li><a class="dropdown-item" href="#">Imange Search</a></li>
          </ul>
        </li>
        <% dbNavList.forEach(function(item){ %>
         <li class="nav-item">
            <a class="nav-link" aria-current="page" href="
            <%=item %>
            ">
              <%= item %>
            </a>
          </li>
        <%  });%>

      </ul>

    </div>
  </div>
  <li class="navbar-nav navbar-collapse">
    <a class="nav-link" aria-current="page"><%= currentDay %></a>
  </li>

</nav>

<div class="">

</div>
<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">

  <% newListItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
      <p> <%= item.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>

  <%  });%>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%=listTitle%>>+</button>
  </form>
</div>

